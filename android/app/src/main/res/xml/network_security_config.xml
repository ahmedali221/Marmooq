<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for development and testing -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- Add your development server domains here -->
    </domain-config>
    
    <!-- Allow all HTTPS traffic -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
    
    <!-- Allow cleartext traffic for specific domains if needed -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">myshopify.com</domain>
        <domain includeSubdomains="true">shopify.com</domain>
        <!-- Add any other domains that need HTTP access -->
    </domain-config>
</network-security-config>
